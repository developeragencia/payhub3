# Variáveis de ambiente para o PAYHUB/ALEXDEVELOPER
# Copie este arquivo para .env e preencha os valores

# Banco de dados PostgreSQL - URL de conexão completa
DATABASE_URL=postgres://username:password@host:port/database

# Configuração de Segurança
SESSION_SECRET=sua_chave_secreta_para_sessoes

# MercadoPago API (Substituir com suas credenciais)
MERCADOPAGO_ACCESS_TOKEN=TEST-0000000000000000-000000-00000000000000000000000000000000-000000000
MERCADOPAGO_PUBLIC_KEY=TEST-00000000-0000-0000-0000-000000000000

# Configuração de URLs (para webhook e redirecionamentos)
APP_URL=https://payhub-alexdeveloper.netlify.app
WEBHOOK_URL=https://payhub-alexdeveloper.netlify.app/.netlify/functions/api/webhook

# Variáveis para ambiente de desenvolvimento
NODE_ENV=development